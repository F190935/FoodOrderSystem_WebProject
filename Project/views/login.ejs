<body style="background-color: white;background-image: url(https://d2gg9evh47fn9z.cloudfront.net/800px_COLOURBOX7183926.jpg); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <img src="https://dcassetcdn.com/design_img/1348743/167240/167240_6899333_1348743_5bffccfb_image.png" style="width:50%;">
        </img></h1>
        <h1 class="text-center mb-3">Login</h1>
      <% include ./partials/messages %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        Don't have an Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>
</body>