<body style="background-color: white;background-image: url(https://d2gg9evh47fn9z.cloudfront.net/800px_COLOURBOX7183926.jpg); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
<div class="row mt-4">
  <div class="col-md-6 m-auto" style="background-color: black;">
    <div class="card card-body" style="background-color:rgba(95, 241, 222, 0.841) ;">
      <h1 class="text-center mb-1">
        <img src="http://localhost:5000/assets/img/cravings.png" style="width:280px;">
        </img></h1>
        <h1 class="text-center mb-2"><b>Login</b></h1>
      <% include ./partials/messages %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email"><b>Email</b></label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password"><b>Password</b></label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        <b>Don't have an Account? </b><a href="/users/register"><b>Register</b></a>
      </p>
    </div>
  </div>
</div>
</body>